@page
@model BlogApp.Pages.Navbar.UsersModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Пользователи";
}
<div class="text-center">
    <h1 class="display-4">Welcome11111</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="block-reg background-white">
    <h4 class="center">Все пользователи</h4>

    <div>
        @foreach (var user in Model.users)
        {
            <div class="card bg-light mb-3" style="width: 15rem;">
                <div class="card-body">
                    <h4 class="card-title">@user.Login</h4>
                    <h5 class="card-title">@user.FirstName @user.LastName</h5>

                        @foreach (var role in user.Roles)
                        {
                            <a class="badge badge-info">@role.Name</a>
                        }
                    @* <h6>@user.Description</h6> *@
                    @* <a type="button" class="btn btn-primary" asp-area="" asp-controller="Role" asp-action="GetRoleToUpdate" asp-route-Id="@role.Id">Редактировать</a> *@
                </div>
            </div>
        }

    </div>
</div>

<style type="text/css">
    .RoleBlock {
        width: 600px;
        padding: 5px;
        padding-right: 30px;
        margin: 5px;
        border: solid 1px black;
    }
</style>
